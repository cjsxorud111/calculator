{{>layout/header}}

<div class="container" style="margin-top: 5rem;">
    <div class="bs-docs-section">
        <div class="row" id="contents">
            <div class="col-lg-4">
                {{#firstColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <a href="/word?mean={{title}}" class="cont" style="text-decoration: none;">
                        <div class="card-body">
                            <!--<h4 class="card-title">{{id}}</h4>-->
                            <p class="card-text">{{content}}</p>
                        </div>
                        </a>
                    </div>
                {{/firstColumn}}
            </div>
            <div class="col-lg-4">
                {{#secondColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <a href="/word?mean={{title}}" class="cont" style="text-decoration: none;">
                        <div class="card-body">
                            <!--<h4 class="card-title">{{id}}</h4>-->
                            <p class="card-text">{{content}}</p>
                        </div>
                        </a>
                    </div>
                {{/secondColumn}}

            </div>
            <div class="col-lg-4">
                {{#thirdColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <a href="/word?mean={{title}}" class="cont" style="text-decoration: none;">
                        <div class="card-body">
                            <!--<h4 class="card-title">{{id}}</h4>-->
                            <p class="card-text">{{content}}</p>
                        </div>
                        </a>
                    </div>
                {{/thirdColumn}}
            </div>
        </div>
    </div>
    <div id="paging">
        <div class="test1">&nbsp;</div>
        <div class="pages">
            <ul class="pagination pagination-lg">
                <li>&nbsp;&nbsp;&nbsp;&nbsp;</li>
                <li class="page-item {{firstArrowActive}}">
                    <a class="page-link" id="previousPages" href="/main?page={{previousPages}}">&laquo;</a>
                </li>
                {{#pageNum.num}}
                    <li class="page-item {{active}}">
                        <a class="page-link" id="page{{numm}}" href="/main?page={{numm}}">{{numm}}</a>
                    </li>
                {{/pageNum.num}}
                <li class="page-item {{lastArrowActive}}">
                    <a class="page-link" id="afterPages" href="/main?page={{afterPages}}">&raquo;</a>
                </li>
            </ul>
        </div>
        <div class="test1">&nbsp;</div>
    </div>
    {{>layout/footer}}
</div>

<style>
    .cont:hover {
        background-color: #E0E0E0
    }

    .pages {
        flex-grow: 0.5;
    }

    .test1 {
        flex-grow: 3.5;
    }

    #paging {
        display: flex;
        flex-direction: row;
    }

    #contents {
        font-family: 'Yeon Sung', cursive;
        font-size: larger;
    }
</style>