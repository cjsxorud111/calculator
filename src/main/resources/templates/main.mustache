<div class="container" style="margin-top: 5rem;">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-4">
                {{#firstColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <div class="card-body">
                            <!--<h4 class="card-title">{{id}}</h4>-->
                            <p class="card-text">{{content}}</p>
                        </div>
                    </div>
                {{/firstColumn}}
            </div>
            <div class="col-lg-4">
                {{#secondColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <div class="card-body">
                            <!--<h4 class="card-title">{{id}}</h4>-->
                            <p class="card-text">{{content}}</p>
                        </div>
                    </div>
                {{/secondColumn}}

            </div>
            <div class="col-lg-4">
                {{#thirdColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <div class="card-body">
                            <!--<h4 class="card-title">{{id}}</h4>-->
                            <p class="card-text">{{content}}</p>
                        </div>
                    </div>
                {{/thirdColumn}}
            </div>
        </div>
    </div>
    <div>
        <ul class="pagination pagination-lg">
            <li class="page-item {{firstArrowActive}}">
                <a class="page-link" id="previousPages" href="/main?page={{previousPages}}">&laquo;</a>
            </li>
            {{#pageNum}}
                <li class="page-item">
                    <a class="page-link" id="page{{num}}" href="/main?page={{num}}">{{num}}</a>
                </li>
            {{/pageNum}}
            <li class="page-item {{lastArrowActive}}">
                <a class="page-link" id="afterPages" href="/main?page={{afterPages}}">&raquo;</a>
            </li>
        </ul>
    </div>

    {{>layout/footer}}
</div>
