{{>layout/header}}

<div class="container" style="margin-top: 5rem;">
    <div class="bs-docs-section">
        <div class="row">
            <div class="col-lg-4">
                {{#firstColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <a href="/word?mean={{title}}" class="cont" style="text-decoration: none;">
                            <div class="card-body">
                                <!--<h4 class="card-title">{{id}}</h4>-->
                                <p class="card-text">{{content}}</p>
                            </div>
                        </a>
                    </div>
                {{/firstColumn}}
            </div>
            <div class="col-lg-4">
                {{#secondColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <a href="/word?mean={{title}}" class="cont" style="text-decoration: none;">
                            <div class="card-body">
                                <!--<h4 class="card-title">{{id}}</h4>-->
                                <p class="card-text">{{content}}</p>
                            </div>
                        </a>
                    </div>
                {{/secondColumn}}

            </div>
            <div class="col-lg-4">
                {{#thirdColumn}}
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{title}}</div>
                        <a href="/word?mean={{title}}" class="cont" style="text-decoration: none;">
                            <div class="card-body">
                                <!--<h4 class="card-title">{{id}}</h4>-->
                                <p class="card-text">{{content}}</p>
                            </div>
                        </a>
                    </div>
                {{/thirdColumn}}
            </div>
        </div>
    </div>
    <div style="text-align: center; border: 1px solid blue;">
        <span style="border: 1px solid red;">
            <ul class="pagination pagination-lg">
                <li class="page-item {{firstArrowActive}}">
                    <a class="page-link" id="previousPages" href="/main?page={{previousPages}}">&laquo;</a>
                </li>
                {{#pageNum.num}}
                    <li class="page-item {{active}}">
                        <a class="page-link" id="page{{numm}}" href="/main?page={{numm}}">{{numm}}</a>
                    </li>
                {{/pageNum.num}}
                <li class="page-item {{lastArrowActive}}">
                    <a class="page-link" id="afterPages" href="/main?page={{afterPages}}">&raquo;</a>
                </li>
            </ul>
        </span>
    </div>

    {{>layout/footer}}
</div>
<br><br><br><br><br><br>
<div style="border: 1px solid rebeccapurple; text-align: center;"><span
        style="border: 1px solid red; width: 100px;"></span></div>
<style>
    .cont:hover {
        background-color: #E0E0E0
    }
</style>